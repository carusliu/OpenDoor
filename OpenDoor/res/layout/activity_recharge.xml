<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/titlebar"
        layout="@layout/carguard_activity_top" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="请选择充值金额"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tx_money_1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="0.33"
            android:background="@drawable/charge_check"
            android:checked="true"
            android:gravity="center"
            android:text="1元"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tx_money_2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="0.33"
            android:background="@drawable/charge_uncheck"
            android:checked="true"
            android:gravity="center"
            android:text="2元"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tx_money_5"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="0.33"
            android:background="@drawable/charge_uncheck"
            android:checked="true"
            android:gravity="center"
            android:text="5元"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tx_money_8"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="0.33"
            android:background="@drawable/charge_uncheck"
            android:checked="true"
            android:gravity="center"
            android:text="8元"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tx_money_10"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="0.33"
            android:background="@drawable/charge_uncheck"
            android:checked="true"
            android:gravity="center"
            android:text="10元"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tx_money_20"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="0.33"
            android:background="@drawable/charge_uncheck"
            android:checked="true"
            android:gravity="center"
            android:text="20元"
            android:textColor="@color/black" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_immediately_pay"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_charge" />

</LinearLayout>