<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eee" >

    <include
        android:id="@+id/exchange_titlebar"
        layout="@layout/carguard_activity_top" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/exchange_titlebar" >
        <ImageView 
            android:id="@+id/prize_pic"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/new_l_2"/>

        <WebView
            android:id="@+id/wv_exchange_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/btn_promote_rate"
            android:layout_below="@+id/prize_pic" />

        <ImageView
            android:id="@+id/btn_promote_rate"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/btn_share"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/try_money"/>
        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:src="@drawable/share"/>
    </RelativeLayout>

</RelativeLayout>